<%- include("header") %>

    <div class="box" id="heading"> 
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
            <% listItem_EJS.forEach((item)=>{ %>

                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= item._id %>" id="" onchange="this.form.submit()">
                        <p> <%= item.itemName %></p>
                    </div>
                    <input type="hidden" name="listTitle" value="<%= _.camelCase(listTitle) %>"> </input>
                </form>
            <% }); %>
                
           

            <form action="/" method="post" class="item">
                <input type="text" name="listItem_input" id="" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value=<%= _.camelCase(listTitle) %>>+</button>
            </form>
    </div>

<%- include("footer") -%>